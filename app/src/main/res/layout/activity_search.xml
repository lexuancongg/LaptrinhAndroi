<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1.CalendarFragment"
    android:orientation="vertical"
    android:background="#D3F6F6">
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/trove4"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/titleText1"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Khác"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Tìm kiếm toàn thời gian"
        android:textColor="#000000"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bd_khac"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"> <!-- Thêm padding để các phần tử không sát nhau quá -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:text="Thu nhập"
            android:textColor="#000000"
            android:textSize="18sp" /> <!-- Dòng chữ Thu nhập -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="8dp"
            android:text="Chi tiêu"
            android:textColor="#000000"
            android:textSize="18sp" /> <!-- Dòng chữ Chi tiêu -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Tổng"
            android:textColor="#000000"
            android:textSize="18sp" /> <!-- Dòng chữ Tổng -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"> <!-- Thêm padding để tránh bị sát -->

        <EditText
            android:layout_width="129dp"
            android:layout_height="69dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="16dp"
            android:hint="0đ"
            android:textStyle="bold" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            android:hint="0đ
"
            android:textStyle="bold" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="78dp"
            android:layout_marginEnd="16dp"
            android:hint="0đ"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>