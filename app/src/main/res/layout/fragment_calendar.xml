<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment1.CalendarFragment"
    android:orientation="vertical"
    android:background="#F0F8FF"
    android:padding="20dp">


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:text="Báo cáo"
android:textColor="#2F4F4F"
    android:textSize="26sp"
    android:textStyle="bold"
    android:layout_marginTop="30dp" />

    <!-- EditText để hiển thị ngày -->
<EditText
android:id="@+id/et_selected_date"
android:layout_width="match_parent"
android:layout_height="60dp"
    android:hint="Chọn ngày"
    android:padding="15dp"
    android:background="@drawable/border"
    android:textSize="18sp"
    android:textColor="#2F4F4F"
    android:textStyle="bold"
    android:focusable="false"
    android:layout_marginTop="20dp" /> <!-- Tạo khoảng cách giữa các phần tử -->

    <!-- CalendarView ẩn khi chọn ngày -->
<CalendarView
android:id="@+id/calendarView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:visibility="visible"
    android:layout_marginTop="15dp" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout6"

        app:tabIndicatorColor="@color/tabBackgroundSelected"
        app:tabSelectedTextColor="@color/tabSelectedTextColor"
        app:tabTextColor="@color/tabUnselectedTextColor"
        app:tabBackground="@drawable/tab_background_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

    <!-- ViewPager2 for the content of each tab -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

