<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".input_fragment.TienChiFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/tienchi_fragment"
    tools:ignore="InvalidId">


    <EditText
        android:id="@+id/et_ngay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ngày"
        android:background="@drawable/border"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Note"
        android:background="@drawable/border"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Số tiền"
        android:background="@drawable/border"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_danhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:text="Danh mục"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_add_danhmuc_chi"
            android:layout_width="50dp"
            android:layout_marginRight="100dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Thêm danh mục"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_new_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên danh mục mới"
            android:padding="12dp"
            android:background="@drawable/border"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_add_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#03A9F4"
            android:text="Thêm danh mục"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/blockGirl"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_shape2">

        <!-- GridView chỉ chứa danh mục tên -->
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_nhapChi"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Lưu"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:minWidth="100dp"
        android:minHeight="40dp" />


</LinearLayout>
</ScrollView>