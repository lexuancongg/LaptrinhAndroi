<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemDanhMuc">

    <!-- LinearLayout chứa ImageButton -->
    <LinearLayout
        android:id="@+id/previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/id_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="#03A9F4"
            android:scaleType="centerInside"
            android:src="@drawable/ic_left"
            android:contentDescription="Về trước" />
    </LinearLayout>

    <!-- TabLayout và ViewPager2 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_themDanhMuc"
        android:layout_width="match_parent"
        android:contentDescription="back"
        android:layout_height="wrap_content"
        android:background="#03A9F4" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/themDanhMuc_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>
